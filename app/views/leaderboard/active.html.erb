<div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-4 text-indigo-700">Currently Active Users</h2>
  <% if @active_users.any? %>
    <ul class="divide-y divide-gray-200">
      <% @active_users.each do |user| %>
        <li class="flex items-center py-2">
          <img src="<%= user.image %>" alt="<%= user.name %>" class="w-8 h-8 rounded-full border mr-3">
          <span class="font-semibold text-gray-700"><%= user.name %></span>
          <span class="ml-auto bg-yellow-100 text-yellow-700 px-2 py-1 rounded text-xs font-bold">HangCoins: <%= user.coins %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="text-gray-500">No users are currently active.</div>
  <% end %>
</div>
